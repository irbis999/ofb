section.card
  padding-top 128px
  padding-bottom 4em
  position relative
  .media
    position absolute
    top 0
    left 0
    width 100%
    z-index -100
    background-repeat no-repeat
    background-size cover
  video.media
    display none
  img.media
    display block
  .card-link
    @extend .border-bottom
    display inline-block
    margin-right 55px
    position relative
    &::after
      content ''
      right -45px
      position absolute
      width 35px
      height 23px
      margin-top 3px
      background top right no-repeat image-url('main/card-mobile.png')
      background-size cover
  .col
    margin-bottom 1em
    &:nth-child(3)
      margin-bottom 0
  @media (min-width medium-up)
    animation appear 3s
    padding-top 450px
    padding-bottom 6em
    max-width 1430px
    margin-left auto
    margin-right auto
    video.media
      display block
    img.media
      display none
    .bg-wave
      position absolute
      left 0
      top 550px
      width 100%
      height 323px
      box-sizing border-box
      z-index 2
      background image-url('main/card-wave.svg') no-repeat 50% 0
      background-size 1440px
    .bg-component
      position relative
      z-index 3
      left -22px
    .animation-container
      animation shift-left 3s ease-out
    .card-link
      margin-right 140px
      &::after
        right -115px
        width 93px
        height 60px
        background-image image-url('main/card.jpg')
    .cols
      @extend .clearfix
      .col
        float left
        padding-right 1em
        box-sizing border-box
        &:nth-child(1)
          width 22%
        &:nth-child(2)
          width 30%
        &:nth-child(3)
          width 48%