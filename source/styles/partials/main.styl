html
  font-size font-size-main
body
  font-family font-family-main
  color font-color-main
  line-height line-height-main
  min-width site-container-min-width
  max-width site-container-max-width
  margin 0 auto
.site-container
  margin 0 auto
  max-width site-container-max-width
  min-width site-container-min-width
  @extend .clearfix
a
  color link-color
  text-decoration none
  &.__styleless
    color inherit
img, iframe, object, embed, video
  max-width 100%
.container
  padding-left container-padding
  padding-right @padding-left
  @extend .clearfix
  &.__relative
    position relative
.anti-container
  margin-left -(container-padding)
  margin-right @margin-left

@media (min-width: medium-up)
  body
    min-width site-container-mup-width
    max-width none
  .site-container
    min-width site-container-mup-width
    max-width @min-width
  .container
    padding-left 0
    padding-right 0