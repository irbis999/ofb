.refresh-component
  position relative
  .refresh
    position absolute
    transform translateY(1.5em)
    white-space nowrap
    &.__active
      transform translateY(0)
.refresh
  color color-gold
  padding-right 20px
  position relative
  cursor pointer
  &::after
    content ''
    width 20px
    height @width
    position absolute
    background image-url('svg-sprite/refresh.svg') no-repeat
    background-size contain
    margin 4px 0 0 10px
  @media (min-width medium-up)
    &::after
      margin-top 6px