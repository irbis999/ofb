@keyframes appear
  from
    opacity 0
  to
    opacity 1

@keyframes disappear
  from
    opacity 1
  to
    opacity 0

@keyframes shift-left
  from
    transform translateX(30px)
  to
    transform translateX(0)

@keyframes fly-top
  from
    opacity 1
    transform translateY(0)
  to
    opacity 0
    transform translateY(-.5em)

@keyframes appear-bottom
  from
    opacity 0
    transform translateY(1.5em)
  to
    opacity 1
    transform translateY(0)
